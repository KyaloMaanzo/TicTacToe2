<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/brownboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="35dp"
        android:src="@drawable/img_title"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/img_play"
            android:background="@drawable/welcomeimg_style"
            android:id="@+id/img_play"
            android:layout_width="210dp"
            android:layout_height="52dp" />
        <ImageView
            android:layout_marginTop="14dp"
            android:src="@drawable/img_quit"
            android:id="@+id/img_quit"
            android:background="@drawable/welcomeimg_style"
            android:layout_width="210dp"
            android:layout_height="52dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/ll_options"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <TextView
            android:paddingLeft="49dp"
            android:textColor="@color/yellowbrown"
            android:textSize="42dp"
            android:text="options"
            android:fontFamily="@font/mvboli"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="77dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="21dp"
                android:textColor="#000000"
                android:paddingTop="14dp"
                android:fontFamily="@font/comic"
                android:paddingLeft="35dp"
                android:text="choose side"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rlimg_x_s"
                android:layout_width="0dp"
                android:layout_height="match_parent" >
                <TextView
                    android:textSize="21dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/mvboli"
                    android:gravity="center"
                    android:text="X's"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rlimg_o_s"
                android:layout_width="0dp"
                android:layout_height="match_parent" >
                <TextView
                    android:textSize="21dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/mvboli"
                    android:gravity="center"
                    android:text="O's"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="21dp"
                android:textColor="#000000"
                android:paddingTop="14dp"
                android:fontFamily="@font/comic"
                android:paddingLeft="35dp"
                android:text="board"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txt3by3"
                android:textSize="28dp"
                android:textColor="@color/yellowbrown"
                android:fontFamily="@font/mvboli"
                android:gravity="center"
                android:text="3x3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txt5by5"
                android:textSize="28dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/mvboli"
                android:gravity="center"
                android:text="5x5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <TextView
                android:textSize="21dp"
                android:textColor="#000000"
                android:paddingTop="14dp"
                android:fontFamily="@font/comic"
                android:paddingLeft="35dp"
                android:text="play vs"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txthuman"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/mvboli"
                android:gravity="center"
                android:text="human"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/txtcomp"
                android:textSize="25dp"
                android:textColor="@color/yellowbrown"
                android:fontFamily="@font/mvboli"
                android:gravity="center"
                android:text="comp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
            <EditText
                android:visibility="invisible"
                android:layout_marginTop="21dp"
                android:textColor="#FFFFFF"
                android:inputType="textCapWords"
                android:id="@+id/txtotherusername"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_width="match_parent"
                android:layout_height="42dp" />
        <TextView
            android:layout_marginTop="21dp"
            android:layout_marginRight="18dp"
            android:id="@+id/btndone"
            android:textSize="28dp"
            android:textColor="@color/yellowbrown"
            android:fontFamily="@font/mvboli"
            android:text="done>"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>


</RelativeLayout>
