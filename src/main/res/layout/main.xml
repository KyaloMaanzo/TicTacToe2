<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/brownboard"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rl_welcome"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_marginTop="35dp"
        android:src="@drawable/img_title"
        android:layout_width="match_parent"
        android:layout_height="70dp" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/img_play"
            android:background="@drawable/welcomeimg_style"
            android:id="@+id/img_play"
            android:layout_width="210dp"
            android:layout_height="52dp" />
        <ImageView
            android:layout_marginTop="14dp"
            android:src="@drawable/img_quit"
            android:id="@+id/img_quit"
            android:background="@drawable/welcomeimg_style"
            android:layout_width="210dp"
            android:layout_height="52dp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_marginBottom="49dp"
            android:layout_marginRight="91dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="56dp"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="42dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="28dp" />
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginBottom="49dp"
            android:layout_marginRight="28dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="56dp"
            android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="42dp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="28dp" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:visibility="gone"
        android:orientation="vertical"
        android:id="@+id/ll_options"
        android:background="@drawable/brownboard"
        android:layout_height="match_parent"
        android:layout_width="match_parent">
        <ImageView
            android:src="@drawable/title_options"
            android:layout_marginTop="35dp"
            android:layout_width="match_parent"
            android:layout_height="77dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:paddingTop="14dp"
                android:paddingLeft="28dp"
                android:src="@drawable/txtchooseside"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rlimg_x_s"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:paddingRight="10dp"
                android:paddingTop="18dp"
                android:layout_height="match_parent" >
                <ImageView
                    android:src="@drawable/x_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:id="@+id/rlimg_o_s"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_marginRight="14dp"
                android:paddingRight="7dp"
                android:paddingTop="18dp"
                android:layout_height="match_parent" >
                <ImageView
                    android:src="@drawable/o_s"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:paddingLeft="28dp"
                android:src="@drawable/txtboard"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/img3x3_clikd"
                android:id="@+id/img3by3"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/img5x5"
                android:id="@+id/img5by5"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp">
            <ImageView
                android:paddingLeft="27dp"
                android:src="@drawable/txtplayvs"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/txthuman"
                android:id="@+id/img_human"
                android:paddingRight="14dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@mipmap/txtcomp_clikd"
                android:id="@+id/img_comp"
                android:paddingBottom="7dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
        </LinearLayout>
            <EditText
                android:visibility="invisible"
                android:layout_marginTop="21dp"
                android:textColor="#FFFFFF"
                android:inputType="textCapWords"
                android:id="@+id/txtotherusername"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"
                android:layout_width="match_parent"
                android:layout_height="42dp" />
        <ImageView
            android:src="@drawable/img_done"
            android:id="@+id/img_done"
            android:layout_marginTop="21dp"
            android:layout_gravity="right"
            android:layout_width="100dp"
            android:layout_height="63dp" />


    </LinearLayout>


</RelativeLayout>
